<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/backgroundColor"
    android:layout_height="match_parent">


    <ListView
        android:id="@+id/storeOrderView"
        android:layout_width="343dp"
        android:layout_height="393dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.601"></ListView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="146dp"
        android:layout_height="55dp"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="208dp"
        android:layout_marginBottom="612dp"
        android:text="@string/storeTitle"
        android:textColor="@color/purple_200"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="127dp"
        android:layout_height="121dp"
        android:layout_marginStart="249dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="592dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/textView"

        app:srcCompat="@drawable/order" />

    <Button
        android:id="@+id/button2"
        android:layout_width="347dp"
        android:layout_height="57dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="746dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="88dp"
        android:text="@string/placetheOrder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>